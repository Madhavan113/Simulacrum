CLAWDBOT_ORACLE_MIN_REPUTATION_SCORE=65
CLAWDBOT_ORACLE_MIN_VOTERS=2
# ClawDBots LLM (optional; enables goal/action cognition). xAI: base URL https://api.x.ai/v1, model e.g. grok-4-1-fast-reasoning
# CLAWDBOT_LLM_API_KEY=your-xai-or-openai-key
# CLAWDBOT_LLM_BASE_URL=https://api.x.ai/v1
# CLAWDBOT_LLM_MODEL=grok-4-1-fast-reasoning

# Research Engine (deep-research agents powered by xAI Grok)
RESEARCH_ENABLED=false
RESEARCH_AGENT_COUNT=3
RESEARCH_TICK_MS=60000
RESEARCH_PUBLICATION_INTERVAL_TICKS=10
RESEARCH_MIN_OBSERVATIONS=30
RESEARCH_EVAL_THRESHOLD=60
# RESEARCH_XAI_API_KEY=your-xai-api-key
RESEARCH_XAI_MODEL=grok-4-1-fast-reasoning
RESEARCH_XAI_BASE_URL=https://api.x.ai/v1
RESEARCH_XAI_MAX_RETRIES=3
RESEARCH_XAI_TIMEOUT_MS=120000

